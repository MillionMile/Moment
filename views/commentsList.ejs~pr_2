            <script type="text/javascript">

                //默认请求第一页数据
                getData();

                //Ajax请求数据
                function getData() {
                    $.get("/commentsList?Picture_id=<%=Picture_id%>&action=find", function (result) {
                        //模板函数
                        var compiled = _.template($("#template").html());
                        //清空全部留言中的所有节点
                        $("#pinglun_div").html("");
                        for (var i = 0; i < result.length; i++) {
                            //数据绑定
                            var html = compiled({
                                num: i,
                                content: result[i].comment.content,
                                name: result[i].user_id.username,
                                date: result[i].date,
                                Picture_id: "<%=Picture_id%>",
                                id: result[i]._id,
                            });
                            //DOM操作，添加节点
                            $("#pinglun_div").append($(html));
                        }
                        $("#pinglun_div").scrollTop($("#pinglun_div")[0].scrollHeight);
                        // alert(;
                    });
                }

                //Ajax提交表单
                $("#submit").click(function () {
                    $.post("/commentsList", {
                        "picture_id": "<%=Picture_id%>",
                        "content": $("#pinglunarea").val()
                    }, function (result) {
                        if (result.result == -1) {
                        } else if (result.result == 1) {
                            //重新加载数据
                            getData();
                        }
                    });
                });
            </script>
        </div>
        <script type="text/javascript">
            $("#voteOfUser").draggable();
            $('#xin_btn img').click(function () {
                if ($(this).attr('src') == "img/icon/爱心.png") {
                    if ($('#isLogin').val() == "false") {
                        alert('登录后才能进行点赞!');
                        return;
                    }
                    $(this).attr('src', "img/icon/爱心变化.png");
                    $.get("/vote/addVote?Picture_id=" + '<%=Picture_id%>', (result) => {
                        location.reload();
                    });
                } else {
                    $(this).attr('src', "img/icon/爱心.png");
                    $.get("/vote/delVote?Picture_id=" + '<%=Picture_id%>', (result) => {
                        location.reload();
                    });
                }
            });
        </script>
