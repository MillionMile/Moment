                <p>登陆</p>
            </div>
        </a>
    {{ } }}
</script>
<script>
    getAvater();
    function getAvater() {
        $.get("/user/avatar", (result) => {
            //模板函数
            let compiled = _.template($("#userTemplate").html())
                //数据绑定
                let html = compiled({
                    isLogin: result.isLogin,
                    avatar: result.avatar
                
                })
                $(".userAvater").append($(html))
        })
    }
</script>
